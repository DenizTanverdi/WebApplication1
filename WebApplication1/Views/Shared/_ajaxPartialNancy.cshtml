@using WebApplication1.Models
@model List<Orders>
<table class="table table-hover">
    <tr>
        <th>Customer Id</th>
        <th>Order Id</th>
        <th>Order Date</th>
        <th>Ship Country</th>
        <th>Ship City</th>
        <th>Detay</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.CustomerID</td>
            <td>@item.OrderID</td>
            <td> @item.OrderDate</td>
            <td>@item.ShipCountry</td>
            <td> @item.ShipCity</td>
            <td>
                @Ajax.ActionLink("Detay", "Details", new { id = item.OrderID }, new AjaxOptions()
           {
               HttpMethod = "Get",
               UpdateTargetId = "order-details",
               InsertionMode = InsertionMode.Replace,
               LoadingElementId = "divLoading",
               LoadingElementDuration=250
           },new { @class = "btn btn-primary", @data_toggle = "modal", data_target = "#exampleModalLong" })

            </td>
        </tr>


    }

    modal-dialog modal-lg
    <div class="modal fade " id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="order-details">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    </table>